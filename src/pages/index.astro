---
import Layout from '../layouts/Layout.astro';
import ServiceCard from '../components/ServiceCard.astro';

// Icons (Industrial/Construction themed)
const AsphaltIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 13h18"/><path d="M3 17h18"/><path d="m2 21 20-8"/><path d="M21 13V9a2 2 0 0 0-2-2h-3L12 3 8 7H5a2 2 0 0 0-2 2v4"/><circle cx="7" cy="11" r="1"/><circle cx="11" cy="9" r="1"/></svg>`;
const LineIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 6h18"/><path d="M3 12h18"/><path d="M3 18h18"/><path d="M3 3v18"/><path d="M21 3v18"/></svg>`;
const SafetyIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2v20"/><path d="m4.93 4.93 14.14 14.14"/><path d="M2 12h20"/><path d="m19.07 4.93-14.14 14.14"/></svg>`;
const StarIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>`;

const services = [
    { 
        title: "Bitumen & Asphalt Repairs", 
        description: "Specializing in emergency pothole repairs and professional asphalt laying. Heavy-duty commercial options for industrial yards and truck bays.", 
        icon: AsphaltIcon,
        image: "/images/repair.png"
    },
    { 
        title: "Commercial Line Marking", 
        description: "Clean, crisp line marking with compliant paints & stencils. Expertly handled bays, arrows, disabled zones, and loading docks.", 
        icon: LineIcon 
    },
    { 
        title: "Upfront Quotes & Safety", 
        description: "No surprises with our upfront written quotes. Full safety-first traffic management available for busy and high-traffic sites.", 
        icon: SafetyIcon 
    }
];

const locations = ["Brisbane CBD", "Ipswich", "Logan", "Redlands", "Moreton Bay", "Springfield", "North Lakes"];
---

<Layout 
    title="Brisbane Bitumen & Lines Co. | Professional Asphalt & Line Marking"
    description="Brisbane's specialists in bitumen repairs, driveway resurfacing, and precision car park line marking. Same-week potholes & patch repairs. Servicing Brisbane, Logan, and Ipswich."
>
    <!-- Background Texture Overlay -->
    <div class="fixed inset-0 pointer-events-none opacity-[0.03] z-[100] bg-[url('https://www.transparenttextures.com/patterns/asphalt.png')]"></div>

    <main class="flex min-h-screen flex-col items-center font-sans text-stone-900 bg-stone-50 selection:bg-amber-400 selection:text-stone-900">
        
        {/* Navigation */}
        <nav class="fixed top-0 w-full z-50 bg-white/80 backdrop-blur-xl border-b border-stone-200/60 transition-all duration-500">
            <div class="max-w-7xl mx-auto px-6 h-24 flex items-center justify-between">
                <div class="flex items-center gap-4 group cursor-pointer">
                    <div class="w-14 h-14 bg-stone-900 rounded-2xl flex items-center justify-center shadow-2xl group-hover:bg-amber-400 transition-all duration-500 rotate-1 group-hover:rotate-0">
                        <div class="text-amber-400 group-hover:text-stone-900 w-8 h-8 transition-colors" set:html={LineIcon} />
                    </div>
                    <div>
                        <span class="block font-black text-2xl tracking-tighter leading-none text-stone-900 uppercase italic">Brisbane <span class="text-amber-500">Bitumen</span></span>
                        <span class="text-[10px] font-bold uppercase tracking-[0.4em] text-stone-400">& Lines Co.</span>
                    </div>
                </div>
                <div class="hidden lg:flex gap-12 items-center text-xs font-black uppercase tracking-[0.2em] text-stone-500">
                    <a href="#services" class="hover:text-stone-900 transition-colors">Services</a>
                    <a href="#about" class="hover:text-stone-900 transition-colors">Why Us</a>
                    <a href="tel:1300248863" class="bg-stone-950 text-white px-8 py-4 rounded-2xl hover:bg-amber-500 hover:text-stone-950 transition-all duration-500 flex items-center gap-3 shadow-xl shadow-stone-200">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
                        1300 248 863
                    </a>
                </div>
            </div>
        </nav>

        {/* Hero Section */}
        <section class="relative w-full pt-44 pb-32 md:pt-64 md:pb-56 px-6 overflow-hidden">
            <div class="absolute top-0 right-0 w-1/2 h-full bg-stone-100 -z-20 hidden lg:block"></div>
            <div class="max-w-7xl mx-auto grid lg:grid-cols-2 gap-24 items-center">
                <div class="relative z-10">
                    <div class="inline-flex items-center gap-3 px-5 py-2.5 bg-amber-50 text-amber-600 rounded-full text-[10px] font-black uppercase tracking-[0.3em] mb-12 border border-amber-100/50">
                        <div class="w-1.5 h-1.5 rounded-full bg-amber-500 transition-all duration-300 animate-ping"></div> Same-Week Pothole & Patch Repairs
                    </div>
                    <h1 class="text-7xl md:text-[8rem] font-black text-stone-950 leading-[0.85] mb-12 tracking-tighter uppercase italic">
                        Brisbane <br />
                        <span class="text-amber-500 not-italic">Bitumen</span> <br />
                        & Lines.
                    </h1>
                    <p class="text-stone-500 text-xl md:text-2xl mb-16 max-w-xl font-medium leading-relaxed">
                        The specialists in <strong class="text-stone-900">bitumen repairs Brisbane</strong> and <strong class="text-stone-900">car park line marking Brisbane</strong>. Fast response, heavy-duty results, and 100% local crew.
                    </p>

                    <div class="flex flex-col sm:flex-row gap-6">
                        <a href="#quote" class="px-14 py-8 bg-stone-900 text-white rounded-[32px] font-black text-xl hover:bg-amber-500 hover:text-stone-950 transition-all duration-500 shadow-3xl shadow-stone-300 flex items-center justify-center gap-4 group">
                            Request Upfront Quote <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 transition-transform"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
                        </a>
                    </div>

                    <div class="mt-20 flex flex-wrap items-center gap-10">
                        <div class="flex items-center gap-3 font-bold text-[10px] uppercase tracking-[0.3em] text-stone-400">
                             <span class="text-amber-500">01</span> Asphalt Repairs Brisbane
                        </div>
                        <div class="border-l border-stone-200 h-4 invisible md:visible"></div>
                        <div class="flex items-center gap-3 font-bold text-[10px] uppercase tracking-[0.3em] text-stone-400">
                             <span class="text-amber-500">02</span> Line Marking Brisbane
                        </div>
                        <div class="border-l border-stone-200 h-4 invisible md:visible"></div>
                        <div class="flex items-center gap-3 font-bold text-[10px] uppercase tracking-[0.3em] text-stone-400">
                             <span class="text-amber-500">03</span> 60km Radius Coverage
                        </div>
                    </div>
                </div>

                <div class="relative scale-110 lg:translate-x-12 translate-y-12 lg:translate-y-0">
                    <div class="absolute inset-0 bg-stone-300/20 rounded-[80px] blur-3xl -rotate-6"></div>
                    <div class="relative z-10 aspect-[4/5] lg:aspect-square rounded-[64px] overflow-hidden shadow-[0_80px_100px_-20px_rgba(0,0,0,0.15)] border-[12px] border-white ring-1 ring-stone-100">
                        <img src="/images/hero.png" alt="Brisbane Bitumen Hero" class="w-full h-full object-cover grayscale-[20%] hover:grayscale-0 transition-all duration-1000 scale-105 hover:scale-100" />
                    </div>
                    
                    {/* Floating Badge */}
                    <div class="absolute -top-12 -right-12 bg-amber-400 p-12 rounded-[50px] shadow-3xl z-20 hidden xl:block rotate-12">
                        <div class="font-black text-5xl text-stone-950 leading-none">FASTER</div>
                        <div class="text-stone-900 font-bold uppercase text-[10px] tracking-[0.2em] mt-3 underline decoration-stone-900 decoration-2 underline-offset-4">Same-Week Response</div>
                    </div>
                </div>
            </div>
        </section>

        {/* Services Grid */}
        <section id="services" class="w-full py-48 bg-white border-y border-stone-200 relative overflow-hidden">
             <div class="absolute top-0 left-0 w-full h-full opacity-[0.02] pointer-events-none text-[20rem] font-black text-stone-950 flex items-center justify-center -rotate-12 translate-y-24">
                BITUMEN
             </div>
            <div class="max-w-7xl mx-auto px-6 relative z-10">
                <div class="flex flex-col md:flex-row justify-between items-end mb-32 gap-12">
                    <div class="max-w-3xl">
                        <h2 class="text-6xl md:text-8xl font-black text-stone-950 mb-10 tracking-tighter leading-none uppercase">Expert <br /><span class="text-amber-500">Asphalt Laying Brisbane</span></h2>
                        <p class="text-stone-500 text-xl font-medium leading-relaxed max-w-2xl">From <strong class="text-stone-900">pothole repairs brisbane</strong> to full <strong class="text-stone-900">driveway resurfacing brisbane</strong>, we deliver clean, crisp, and compliant results for every project.</p>
                    </div>
                    <div class="flex gap-4">
                        <div class="w-16 h-16 rounded-full border border-stone-200 flex items-center justify-center text-stone-300 font-bold uppercase text-[8px] tracking-[0.4em] rotate-90 whitespace-nowrap">Industry Standard</div>
                    </div>
                </div>
                
                <div class="grid md:grid-cols-3 gap-10">
                    {services.map((s) => (
                        <ServiceCard title={s.title} description={s.description} icon={s.icon} image={s.image} />
                    ))}
                </div>
            </div>
        </section>

        {/* Why Choose Us / Differentiators */}
        <section id="about" class="w-full py-48 bg-stone-950 text-white px-6 relative overflow-hidden">
            <div class="absolute right-0 bottom-0 w-1/3 h-full bg-amber-500/10 blur-[150px] rotate-45 translate-x-1/2 translate-y-1/2"></div>
            <div class="max-w-7xl mx-auto grid lg:grid-cols-2 gap-32 items-center">
                <div class="order-2 lg:order-1">
                    <div class="aspect-video rounded-[48px] overflow-hidden border-4 border-stone-800 shadow-2xl group relative">
                         <img src="/images/repair.png" alt="Precision Bitumen Repair" class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity duration-700" />
                         <div class="absolute inset-0 bg-gradient-to-t from-stone-950/80 to-transparent flex items-end p-12">
                            <p class="text-xs font-black uppercase tracking-[0.4em] text-amber-500">Heavy-Duty Commercial Asphalt Options</p>
                         </div>
                    </div>
                </div>
                <div class="order-1 lg:order-2">
                    <h2 class="text-5xl md:text-7xl font-black mb-12 tracking-tighter leading-none uppercase italic">Brisbane's <br /><span class="text-amber-500">Straight-Talking</span> Crew</h2>
                    <p class="text-stone-400 text-xl mb-12 leading-relaxed">
                        We don't do surprises. Just upfront written quotes, clear scope, and a safety-first approach to <strong class="text-white">asphalt repairs brisbane</strong>. Our local Brisbane crew is fully insured and ready for your industrial yard or truck bay needs.
                    </p>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-y-8 gap-x-12">
                        {[
                            { title: "Same-Week Response", desc: "Fast-response potholes & patch repairs." },
                            { title: "Clean & Crisp", desc: "Compliant paints + stencils for all zones." },
                            { title: "Safety-First", desc: "Available traffic management for busy sites." },
                            { title: "No Surprises", desc: "Upfront written quotes and clear scope." }
                        ].map(item => (
                            <div>
                                <h4 class="text-amber-500 font-black text-xs uppercase tracking-[0.2em] mb-3">{item.title}</h4>
                                <p class="text-stone-400 text-sm leading-relaxed">{item.desc}</p>
                            </div>
                        ))}
                    </div>
                </div>
            </div>
        </section>

        {/* Locations Ticker */}
        <div class="w-full py-16 bg-amber-400 overflow-hidden relative border-y-4 border-stone-950">
            <div class="flex gap-20 whitespace-nowrap animate-marquee">
                {[...locations, ...locations].map(loc => (
                    <span class="text-stone-950 font-black text-4xl uppercase italic tracking-tighter flex items-center gap-6">
                        {loc} <div class="w-3 h-3 bg-stone-950 rounded-full"></div>
                    </span>
                ))}
            </div>
        </div>

        {/* CTA */}
        <section id="quote" class="w-full py-48 px-6 bg-stone-50">
            <div class="max-w-5xl mx-auto text-center">
                <div class="flex justify-center mb-12">
                     <div class="w-24 h-24 bg-stone-950 rounded-[32px] flex items-center justify-center text-amber-400 shadow-3xl rotate-3">
                        <div class="w-12 h-12" set:html={LineIcon} />
                     </div>
                </div>
                <h2 class="text-6xl md:text-9xl font-black text-stone-950 mb-12 tracking-tighter leading-none uppercase italic">Get Your <span class="text-amber-500 not-italic uppercase underline decoration-stone-950 decoration-8 underline-offset-[16px]">Quote</span></h2>
                <p class="text-stone-500 text-xl md:text-2xl mb-20 font-medium">Clear scope. Fixed pricing. Servicing commercial and industrial Brisbane, Logan, and Ipswich.</p>
                <div class="flex flex-col sm:flex-row gap-8 justify-center">
                    <a href="tel:1300248863" class="px-16 py-8 bg-stone-950 text-white rounded-[32px] font-black text-2xl hover:scale-105 transition-all duration-500 shadow-3xl shadow-stone-300 flex items-center justify-center gap-4">
                        üìû 1300 248 863
                    </a>
                    <a href="mailto:quotes@brisbanebitumenlines.com.au" class="px-16 py-8 bg-white text-stone-950 border-4 border-stone-950 rounded-[32px] font-black text-2xl hover:bg-stone-100 transition-all duration-500 shadow-xl">
                        Message Us
                    </a>
                </div>
            </div>
        </section>

        {/* Footer */}
        <footer class="w-full py-32 bg-stone-950 text-stone-600 px-6 border-t border-stone-900">
            <div class="max-w-7xl mx-auto">
                <div class="flex flex-col md:flex-row justify-between items-start gap-20 mb-32">
                    <div class="max-w-sm">
                        <div class="flex items-center gap-4 mb-10">
                            <div class="w-10 h-10 bg-white rounded-lg flex items-center justify-center text-stone-950">
                                <div class="w-6 h-6" set:html={LineIcon} />
                            </div>
                            <span class="font-black text-xl text-white uppercase italic">Brisbane <span class="text-amber-500 text-xs tracking-widest block not-italic opacity-50">Bitumen & Lines Co.</span></span>
                        </div>
                        <p class="text-sm font-bold leading-relaxed mb-8 uppercase tracking-widest">Premium Bitumen Repairs, Asphalt Laying & Commercial Line Marking. Serving a 60km radius of Brisbane CBD.</p>
                        <div class="text-xs font-black uppercase tracking-[0.3em] text-stone-500 space-y-2">
                            <p>üìû 1300 248 863</p>
                            <p>‚úâÔ∏è quotes@brisbanebitumenlines.com.au</p>
                        </div>
                    </div>
                    <div class="grid grid-cols-2 gap-20">
                        <div>
                            <h4 class="text-white font-black uppercase text-xs tracking-[0.4em] mb-8">Services</h4>
                            <ul class="space-y-4 text-xs font-bold uppercase tracking-widest">
                                <li><a href="#" class="hover:text-amber-500 transition-colors">Bitumen Repairs Brisbane</a></li>
                                <li><a href="#" class="hover:text-amber-500 transition-colors">Asphalt Laying Brisbane</a></li>
                                <li><a href="#" class="hover:text-amber-500 transition-colors">Car Park Line Marking</a></li>
                                <li><a href="#" class="hover:text-amber-500 transition-colors">Driveway Resurfacing</a></li>
                            </ul>
                        </div>
                        <div>
                            <h4 class="text-white font-black uppercase text-xs tracking-[0.4em] mb-8">Regions</h4>
                            <ul class="space-y-4 text-xs font-bold uppercase tracking-widest">
                                <li>Brisbane Metro</li>
                                <li>Ipswich & Logan</li>
                                <li>Redlands</li>
                                <li>Moreton Bay</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="flex flex-col md:flex-row justify-between items-center py-12 border-t border-stone-900 gap-6">
                    <div class="font-bold uppercase text-[10px] tracking-[0.5em]">¬© 2026 BRISBANE BITUMEN & LINES CO.</div>
                    <div class="flex gap-8 font-black uppercase text-[10px] tracking-[0.3em] text-stone-400">
                        <span>ABN 84 923 112 001</span>
                        <span>FULLY INSURED & LICENSED</span>
                    </div>
                </div>
            </div>
        </footer>
    </main>

    <style is:global>
        @keyframes marquee {
            0% { transform: translateX(0); }
            100% { transform: translateX(-50%); }
        }
        .animate-marquee {
            animation: marquee 30s linear infinite;
        }
    </style>
</Layout>
